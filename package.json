{
  "name": "react-shop",
  "version": "1.0.0",
  "description": "It is a React + Node.js + Express full stack e-commerce portfolio project.",
  "private": true,
  "keywords": [
    "e-commerce",
    "portfolio-project"
  ],
  "homepage": "https://github.com/zvolcsey/react-shop#readme",
  "bugs": {
    "url": "https://github.com/zvolcsey/react-shop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zvolcsey/react-shop.git"
  },
  "license": "MIT",
  "author": "Zoltán Völcsey",
  "type": "module",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently npm:dev:*",
    "lint": "cd client && npm run lint && cd ../server && npm run lint",
    "prettier:check": "prettier . --check --ignore-unknown",
    "prettier:write": "prettier . --write --ignore-unknown",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@types/lint-staged": "^13.3.0",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "3.4.2"
  },
  "lint-staged": {
    "*": [
      "prettier . --write --ignore-unknown"
    ]
  }
}
